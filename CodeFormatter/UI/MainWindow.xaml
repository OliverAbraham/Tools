<Window x:Class="CodeFormatterGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# Code Formatter" Height="675.557" Width="652.291">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <GridSplitter HorizontalAlignment="Stretch" Height="13" Grid.Row="1" VerticalAlignment="Top" ResizeDirection="Rows" Background="#FFB0E7F3"/>
        <Grid Grid.Row="0">
            <TextBox Name="Textbox_Oben" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Text="" 
                     TextChanged="Textbox_Oben_TextChanged" IsManipulationEnabled="True" FontFamily="Consolas"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0,13,0,0">
            <TextBox Name="Textbox_Unten" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Text="" FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Window>
