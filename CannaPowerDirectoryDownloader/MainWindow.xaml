<Window x:Class="CannaPowerDirectoryDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Canna Power Downloader" Height="350" Width="525"
        Background="FloralWhite">
    <Grid>
        <ListBox Margin="28,27,28,61" Name="listBox1" />

        <Label Name="LabelProgress" Margin="145,0,0,21" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="243" />

        <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="28,0,0,21" 
                VerticalAlignment="Bottom" Width="75" Click="buttonStart_Click" Background="LightGreen"/>

        <Button Content="Stop" Height="23" HorizontalAlignment="Right" Margin="0,0,28,21" 
                VerticalAlignment="Bottom" Width="75" Click="buttonStop_Click" />
    </Grid>
</Window>
